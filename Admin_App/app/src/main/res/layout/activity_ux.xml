<!-- ImageButtons are made by Freepik from www.flaticon.com   -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArNavActivity">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.google.ar.sceneform.ux.ArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/butt_add_room"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/ux_fragment"
        android:layout_alignEnd="@+id/ux_fragment"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/key_card" />

    <ImageButton
        android:id="@+id/butt_add_worker"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/butt_add_room"
        android:layout_alignEnd="@+id/ux_fragment"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/worker_with_wrench" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/butt_add_worker"
        android:layout_alignEnd="@+id/ux_fragment"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/round_help_button" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/ux_fragment"
        android:layout_alignBottom="@+id/ux_fragment"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/navinhere1" />

</RelativeLayout>
